<div class="mx-20">
  <div class="flex flex-col">
    <h1 class="text-4xl font-bold text-gray-700">Search Results: </h1>

    <div class="flex flex-col gap-10 md:flex-row">
      <div class="mt-10">
        <%= image_tag(book.book_cover, class: "h-auto max-w-sm rounded-lg") %>
      </div>

      <div class="flex flex-col gap-4 mt-6">
        <h1 class="text-3xl font-bold text-gray-900 mt-6 mb-4 text-left"><%= book.title %> </h1>

        <div class="text-lg font-semibold flex"> 
          by <%= book.authors.map(&:full_name).to_sentence %>
        </div>

        <div class="text-lg font-semibold flex mt-16"> 
          Edition: <p class="text-[#6362f2] ml-2"><%= book.edition %></p>
        </div>

        <div class="text-lg font-semibold flex"> 
          Price: <p class="text-[#6362f2] ml-2"> PHP <%= book.price.round(2) %> </p>
        </div>

        <div class="text-lg font-semibold flex"> 
          ISBN: <p class="text-[#6362f2] ml-2"> <%= format_isbn_number(book.isbn_number_13) %> </p>
        </div>

        <div class="text-lg font-semibold flex"> 
          Publication Year: <p class="text-[#6362f2] ml-2"> <%= book.publish_at.year %> </p>
        </div>

        <div class="text-lg font-semibold flex"> 
          Publisher: <p class="text-[#6362f2] ml-2"> <%= book.publisher.name %> </p>
        </div>
      </div>
    </div>
  </div>
</div>